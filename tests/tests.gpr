with "contrib/RecordFlux/defaults.gpr";
with "spdm_responder_emu.gpr";

project Tests is

   for Languages use ("Ada", "C");
   for Source_Dirs use (".",
                        "../examples/debug",
                        "../examples/platform",
                        "../build/debug/generated",
                        "../include");
   for Object_Dir use "../build/tests";
   for Main use ("responder.adb", "proxy.adb", "requester.adb");

   package Builder is
      for Default_Switches ("Ada") use ("-j0");
   end Builder;

   package Compiler is
      for Default_Switches ("Ada") use Defaults.Compiler_Switches;
      for Default_Switches ("C") use ("-g",
                                      "-W",
                                      "-Wall",
                                      "-Wextra",
                                      "-Werror",
                                      "-Wmissing-prototypes");
   end Compiler;

   package Linker is
      for Default_Switches ("Ada") use ("-L../build/spdm_emu/lib",
                                        "-Wl,--start-group",
                                        "-lcryptlib_mbedtls",
                                        "-ldebuglib",
                                        "-lmbedtlslib",
                                        "-lspdm_common_lib",
                                        "-lspdm_crypt_lib",
                                        "-lspdm_device_secret_lib_sample",
                                        "-lspdm_responder_lib",
                                        "-lspdm_secured_message_lib",
                                        "-lmalloclib",
                                        "-lmemlib",
                                        "-lrnglib_std",
                                        "-Wl,--end-group");
   end Linker;

   package Binder is
      for Default_Switches ("Ada") use ("-Es");
   end Binder;

   package Prove is
      for Proof_Switches ("Ada") use Defaults.Proof_Switches;
   end Prove;

end Tests;
