project Arm
is

   for Source_Dirs use (".", "../build/generated");
   for Object_Dir use "../build/arm";
   for Create_Missing_Dirs use "True";
   for Target use "arm-elf";
   for Runtime ("Ada") use "zfp-stm32f4";
   for Main use ("embedded.adb");

   package Builder is
      for Global_Compilation_Switches ("Ada") use (
         "-ffunction-sections",
         "-fdata-sections",
         "-Os",
         "-gnatp",
         "-fno-inline"
      );
   end Builder;

   package Linker is
      for Default_Switches ("Ada") use (
         "-Os",
         "-Wl,-gc-sections"
      );
   end Linker;

   package Ide is
      null;
   end Ide;

end Arm;
