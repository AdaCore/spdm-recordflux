project Riscv32
is

   for Source_Dirs use (".", "../build/generated");
   for Object_Dir use "../build/riscv32";
   for Create_Missing_Dirs use "True";
   for Target use "riscv32-elf";
   for Runtime ("Ada") use "zfp-rv32imac";
   for Main use ("embedded.adb");

   package Builder is
      for Global_Compilation_Switches ("Ada") use (
         "-ffunction-sections",
         "-fdata-sections",
         "-Os",
         "-gnatp",
         "-fno-inline"
      );
   end Builder;

   package Linker is
      for Default_Switches ("Ada") use (
         "-Os",
         "-Wl,-gc-sections"
      );
   end Linker;

   package Ide is
      null;
   end Ide;

end Riscv32;
